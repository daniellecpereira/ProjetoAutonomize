@model IEnumerable<Autonomize.Models.Usuario>

@{
    ViewData["Title"] = "Usuários";
}

<h1>Usuários</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar novo usuário</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.NomeUsuario)</th>
            <th>@Html.DisplayNameFor(model => model.EmailUsuario)</th>
            <th>@Html.DisplayNameFor(model => model.TipoUsuario)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NomeUsuario</td>
                <td>@item.EmailUsuario</td>
                <td>@(System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(item.TipoUsuario))</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IDUsuario" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.IDUsuario" class="btn btn-primary" >Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.IDUsuario" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
