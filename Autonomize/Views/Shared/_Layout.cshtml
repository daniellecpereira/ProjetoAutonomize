<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Autonomize</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f7fa;
        }

        .sidebar {
            width: 240px;
            position: fixed;
            height: 100%;
            background-color: #fff;
            border-right: 1px solid #ddd;
        }

            .sidebar .nav-link {
                color: #333;
                padding: 15px;
            }

                .sidebar .nav-link.active {
                    color: #004AAD;
                    background-color: #e7f1fc;
                    font-weight: bold;
                }

        .content {
            margin-left: 240px;
            padding: 20px;
        }

        .topbar {
            height: 60px;
            background-color: #fff;
            border-bottom: 1px solid #ddd;
            padding: 10px 20px;
        }
    </style>
</head>
<body>
    <div class="bg-light sidebar p-3 vh-100" style="width: 220px;">
        <div class="text-center mb-4">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/img/logo01.png" alt="Autonomize" class="img-fluid" style="max-height: 60px;" />
            </a>
        </div>

        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Produtos" asp-action="Index">
                    <i class="fas fa-box"></i> Produtos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Clientes" asp-action="Index">
                    <i class="fas fa-users"></i> Clientes
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Usuarios" asp-action="Index">
                    <i class="fas fa-user"></i> Usuários
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Vendas" asp-action="Index">
                    <i class="fas fa-shopping-cart"></i> Vendas
                </a>
            </li>
        </ul>
    </div>

    <div class="content">
        <div class="topbar d-flex justify-content-between align-items-center">
            <input type="text" class="form-control w-50" placeholder="Buscar...">
            <div class="dropdown">
                <a class="text-dark text-decoration-none dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                    <i class="fas fa-user-circle"></i>
                    @User.Identity?.Name
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><span class="dropdown-item-text">Olá, @User.Identity?.Name!</span></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="Logout">Sair</a></li>
                </ul>
            </div>
        </div>

        <main role="main" class="mt-4">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
