@model Autonomize.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.NomeProduto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.DescricaoProduto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DescricaoProduto)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ValorProduto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ValorProduto)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.QuantidadeEstoque)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.QuantidadeEstoque)
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.IDProduto" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
