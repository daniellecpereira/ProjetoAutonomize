@model Autonomize.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<h1>Excluir Produto</h1>

<h3>Tem certeza que deseja excluir este produto?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.NomeProduto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.DescricaoProduto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DescricaoProduto)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ValorProduto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ValorProduto)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.QuantidadeEstoque)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.QuantidadeEstoque)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IDProduto" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
